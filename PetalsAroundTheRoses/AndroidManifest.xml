<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sc.erza.petalsaroundtheroses"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/FullscreenTheme" >
        <activity
            android:name="sc.erza.petalsaroundtheroses.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sc.erza.petalsaroundtheroses.Game"
            android:label="@string/title_activity_game"
            android:parentActivityName="sc.erza.petalsaroundtheroses.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sc.erza.petalsaroundtheroses.MainActivity" />
        </activity>
        <activity
            android:name="sc.erza.petalsaroundtheroses.Rules"
            android:label="@string/title_activity_rules"
            android:parentActivityName="sc.erza.petalsaroundtheroses.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sc.erza.petalsaroundtheroses.MainActivity" />
        </activity>
    </application>

</manifest>
